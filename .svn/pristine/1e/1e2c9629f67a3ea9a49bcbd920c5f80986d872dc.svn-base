
@{
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>


</head>

<body>
    <div id="app">


        <form method="post" action="../customiz/customizAction!findMajor">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="添加" class="BUTTON_STYLE1"
                               onclick="window.location.href='/Client/zwszadd';">
                    </td>
                </tr>
            </table>
            <el-table :data="table"
                      style="width: 100%">
                <el-table-column prop="major_kind_id"
                                 label="属性种类"
                                 width="395">
                </el-table-column>
                <el-table-column prop="major_kind_name"
                                 label="属性名称"
                                 width="395">
                </el-table-column>
                <el-table-column prop="major_id"
                                 label="属性名称"
                                 width="395">
                </el-table-column>
                <el-table-column prop="major_name"
                                 label="属性名称"
                                 width="395">
                </el-table-column>
                <el-table-column label="操作">
                    <template slot-scope="scope">
                        <el-button size="mini" type="danger" v-on:click="remove(scope.row.major_kind_id)">删除</el-button>
                    </template>
                    
                </el-table-column>

            </el-table>


        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                table: [],
            }, methods: {
                fill: function () {
                    axios.get('/Client/Index1')
                        .then(res => {
                            console.log(res);
                            this.table = res.data;
                        })
                }, remove(id) {
                    console.log(id);
                    var t = this;
                    if (confirm("确定删除此数据吗?")) {
                        axios.get('/Client/ZWDelete?major_kind_id=' + id, ).then(res => {
                            console.log(res.data);
                            if (res.data == "1") {
                                alert('删除成功');
                                t.fill();
                                
                            } else {
                                alert('删除成功！');
                            }
                        })
                    }
                }
            }, mounted: function () {
                this.fill();
            }
        })
    </script>
</body>
</html>


