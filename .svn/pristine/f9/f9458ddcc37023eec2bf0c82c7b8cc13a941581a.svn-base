
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Level</title>
    <link href="~/Scripts/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <style type="text/css">
        .el-table tr {
            background-color: #FFFFCC;
        }

        .el-table--border th.el-table__cell {
            background-color: #FFFFCC;
        }
    </style>
</head>
<body>
    <div id="app">
        <form method="post" action="../customiz/customizAction!findFirstKind">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="添加" class="BUTTON_STYLE1"
                               onclick="window.location.href='/Client/Leve2Select'" />
                    </td>
                </tr>
            </table>
            <el-table :data="tableData"
                      border
                      style="width: 100%"
                      :cell-style="{ textAlign: 'center' }"
                      :header-cell-style="{textAlign: 'center'}">
                <el-table-column prop="first_kind_name"
                                 label="I级机构名称"
                                 width="250px">
                </el-table-column>
                <el-table-column prop="second_kind_id"
                                 label="II级机构编号"
                                 width="200px">
                </el-table-column>
                <el-table-column prop="second_kind_name"
                                 label="II级机构名称"
                                 width="250px">
                </el-table-column>
                <el-table-column prop="second_salary_id"
                                 label=" 薪酬发放责任人编号"
                                 width="200px">
                </el-table-column>
                <el-table-column prop="second_sale_id"
                                 label="销售责任人编号"
                                 width="200px">
                </el-table-column>
                <el-table-column label="编改">
                    <template slot-scope="scope">
                        <el-button size="mini" v-on:click="UPd(scope.row.second_kind_id)">编辑</el-button>
                    </template>
                </el-table-column>
                <el-table-column label="删除">
                    <template slot-scope="scope">
                        <el-button size="mini" type="danger" v-on:click="Del(scope.row.second_kind_id)">删除</el-button>
                    </template>
                </el-table-column>
            </el-table>
        </form>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            tableData:[]
        },
        methods: {
            find: function () {
                axios.get("/Client/Leve2Find").then(res => {
                    this.tableData = res.data;
                }).catch(err => {
                    console.log(err);
                })
            },
            Del: function (No) {

                if (confirm("是否确删除")) {
                    axios.get("/Client/Leve2Del?No=" + No).then(res => {
                        if (res.data == "1") {
                            this.$message({
                                message: '恭喜你，删除成功了',
                                type: 'success'
                            });
                            this.find();
                        }
                    }).catch(err => {
                        console.log(err);
                    })
                }
            },
            UPd: function (obj) {
                location.href = "/Client/Leve2UpdateView?obj=" + obj
            }
        },
        mounted: function () {
            this.find();
        }
    })
</script>

